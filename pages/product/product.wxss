/* pages/product/product.wxss */
.container{
  background: #fff;
}
swiper{
  width: 100%;
  height: 400rpx;
}
swiper>swiper-item{
    width: 100%;
  height: 400rpx;
}
swiper image{
  display: block;
  width: 100%;
  height: 400rpx;
}
.view-info{
  margin: 0 30rpx;
  padding: 30rpx 0;
  border-bottom: solid 1px #efefef;
}
.product-name{
	font-size: 18px;
	color: #333333;
}
.product-club{
	font-size: 14px;
	color: #666666;
}
.price{
  display: flex;
  flex-direction: row;
  align-items: baseline;
}
.price1{
	font-size: 20px;
	color: #00b4d0;
  margin-right: 14rpx;
}
.price2{
	font-size: 14px;
	color: #666666;
  text-decoration: line-through
}