/* pages/exhibitionBox/themeDetail/themeDetail.wxss */

.container {
    border-top: solid 1px #e6e6e6;
	background: #efefef
}

.header {
    width: 100%;
	background: #fff;
}

.header-img {
    width: 100%;
    height: 560rpx;
}

.header-title {
    padding: 30rpx 40rpx 30rpx 40rpx;
}

.header-name {
    font-size: 20px;
    line-height: 25px;
    font-weight: 500;
    color: #333;
}

.header-desc {
    margin-top: 10rpx;
    line-height: 24px;
    font-size: 14px;
    color: #999;
}

.header-add {
    border-top: solid 2rpx #efefef;
    margin: 0 40rpx;
    padding: 40rpx 0;
}

.header-time {
    font-size: 14px;
    color: #999;
}


.shop_date {
    display: table;
    width: 100%;
	margin-top: 20rpx;
}
.shop_date image {
    width: 34rpx;
    height: 34rpx;
    display: table-cell;
    vertical-align: middle;
}

.right-icon {
    float: right;
    display: table-cell;
    vertical-align: middle;
}

.shop_date text {
	display: inline-block;
    font-size: 14px;
    color: #999;
    width:620rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.content{
	background: #fff;
	margin-top: 40rpx;
}


/*选择数量和添加到购物车*/

.cart-box {
    width: 750rpx;
    height: 100rpx;
    color: #fff;
    display: flex;
    align-items: center;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #fff;
    border-top: solid 1rpx #e6e6e6;
}

.product-counts, .add-cart-btn {
    display: flex;
    align-items: center;
    justify-content: center;
}

.product-counts {
    width: 270rpx;
    height: 100rpx;
    box-sizing: border-box;
    font-size: 40rpx;
    color: #d93737;
    font-weight: 500;
}

.add-cart-btn {
    background-color: #d93838;
    font-size: 36rpx;
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
    flex: 1;
}

.add-cart-btn:active {
    color: #fff;
}

.add-cart-btn.disabled {
    color: #fff;
    background: #4d4d4d;
}
/* 弹出层 */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding:40rpx 0;
}
.input{
	display: block;
	height: 100rpx;
	line-height: 100rpx;
	margin: 0 40rpx 40rpx;
	border-bottom: solid 2rpx #efefef;
}
.commodity_attr_box_title{
	text-align: center;
	font-size: 14px;
	color: #333;
	border-bottom: solid 2rpx #efefef;
	padding-bottom: 40rpx;
	margin:0 40rpx;
}
.sure{
	background-color: #d93838;
    font-size: 36rpx;
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
    flex: 1;
	text-align: center;
	margin: 40rpx 40rpx 0 40rpx;
}
