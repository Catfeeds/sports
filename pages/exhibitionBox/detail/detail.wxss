}


/* 艺术家 */

.artist {
	margin-top: 20rpx;
	border-top: solid 2rpx #efefef;
	padding: 40rpx 0 0 0;
    display: flex;
    flex-direction: row;
    background-color: #fff;
    align-items: center; /*垂直居中*/
    justify-content: center; /*水平居中*/
}

.artist-img {
    width: 120rpx;
    height: 120rpx;
    border-radius: 100%;
    overflow: hidden;
}

.artist-content {
    margin-left: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: center; /*水平居中*/
    font-size: 0;
}

.artist-name {
    font-size: 14px;
    font-weight: 500;
    font-stretch: normal;
    color: #333;
}

.artist-desc {
	width: 450rpx;
    margin-top: 10rpx;
    font-size: 13px;
    color: #999;
	height: 13px;
	line-height: 13px;
	overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
	white-space: nowrap;
}

.right-icon {
    display: block;
    width: 44rpx;
    height: 44rpx;
    vertical-align: middle;
}


/* 推荐 */
.works-wrapper {
    padding: 0 40rpx 40rpx 40rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
	justify-content: space-between
}

.work {
    width: 320rpx;
    display: flex;
    flex-direction: column;
	margin-top: 40rpx;
}

.work-img {
    display: block;
    width: 320rpx;
    height: 320rpx;
}

.work-name{
	font-size: 14px;
	font-weight: 500;
	color: #333333;
	margin-top: 20rpx;
}
.work-price{
	margin-top: 10rpx;
	font-size: 13px;
	color: #d93838;
}
